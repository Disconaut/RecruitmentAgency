@using System.Globalization
@model RecruitmentAgency.Models.Payment

<div class="modal fade" id="createPayment" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header justify-content-center border-0">
                <h4 class="modal-title">Add payment to vacancy</h4>
            </div>
            <form id="payForm" asp-action="Create" asp-controller="Payments" onsubmit="onSubmit(event)">
                @Html.HiddenFor(x => x.VacancyId)
                <div class="modal-body">
                    <section>
                        <div id="multple-step-form-n" class="container overflow-hidden">

                            <div id="multistep-start-row" class="row">
                                <div id="multistep-start-column" class="col-12 m-auto">
                                    <div class="multisteps-form__form">

                                        <div id="single-form-next" class="rounded bg-white js-active" data-animation="scaleIn">
                                            <div id="form-content" class="multisteps-form__content">
                                                <div id="input-grp-single" class="form-row">
                                                    <div class="col-12">
                                                        <label asp-for="Sum"></label>
                                                        <div class="input-group">
                                                            <input asp-for="Sum" class="form-control multisteps-form__input" type="number" aria-describedby="paymentCurrencyPrepend"/>
                                                            <div class="input-group-append">
                                                                <span class="input-group-text" id="paymentCurrencyPrepend">@NumberFormatInfo.CurrentInfo.CurrencySymbol</span>
                                                            </div>
                                                        </div>
                                                        <span asp-validation-for="Sum" class="text-danger"></span>
                                                    </div>


                                                </div>
                                                <div id="input-grp-single" class="form-row mt-4 mb-4">
                                                    <div class="col-12">
                                                        <label asp-for="TransactionDate"></label>
                                                        <input asp-for="TransactionDate" class="form-control multisteps-form__input" type="date" />
                                                        <span asp-validation-for="TransactionDate" class="text-danger"></span>
                                                    </div>


                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
                <div class="modal-footer justify-content-center container border-0">
                    <button class="btn btn-primary col" type="submit">Add</button>
                    <button class="btn btn-light col" type="button" data-dismiss="modal">Close</button>
                </div>
            </form>
            
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        </div>
    </div>
</div>