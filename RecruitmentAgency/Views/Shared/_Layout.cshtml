<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>@ViewData["Title"] - MELANCRUT</title>
    <link rel="stylesheet" href="~/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/assets/fonts/fontawesome5-overrides.min.css">
    <link rel="stylesheet" href="~/assets/css/sb-admin-2.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.7.0/css/buttons.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/searchpanes/1.2.1/css/searchPanes.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/select/1.3.3/css/select.bootstrap4.min.css">
    <link rel="stylesheet" href="~/assets/css/Multi-step-form.css">
    <link rel="stylesheet" href="~/assets/css/untitled.css">
    <link rel="stylesheet" href="~/assets/css/View-Table-Details.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body id="page-top">
    <div id="wrapper">
        <nav class="navbar navbar-dark align-items-start sidebar sidebar-dark accordion bg-gradient-primary p-0">
            <div class="container-fluid d-flex flex-column p-0">
                <a class="navbar-brand d-flex justify-content-center align-items-center sidebar-brand m-0" asp-controller="Home" asp-action="Index">
                    <div class="sidebar-brand-icon"><i class="fas fa-users"></i></div>
                    <div class="sidebar-brand-text mx-3"><span>MELANCRUT</span></div>
                </a>
                <hr class="sidebar-divider my-0">
                <ul class="navbar-nav text-light" id="accordionSidebar">
                    @if (User.IsInRole("Recruiter"))
                    {
        <li class="nav-item"><a class="nav-link" asp-controller="Vacancies" asp-action="Index"><i class="fas fa-briefcase"></i><span>Vacancies</span></a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Applications" asp-action="Index"><i class="fas fa-file-alt"></i><span>Applications</span></a></li>
                                        <li class="nav-item"><a class="nav-link" asp-controller="Candidates" asp-action="Index"><i class="fas fa-id-card"></i><span>Candidates</span></a></li>
                                                        <li class="nav-item"><a class="nav-link" asp-controller="Customers" asp-action="Index"><i class="fas fa-user-tie"></i><span>Customers</span></a></li>
                                                                        <li class="nav-item"><a class="nav-link" asp-controller="Employees" asp-action="Recruiters"><i class="fas fa-id-card-alt"></i><span>Recruiters</span></a></li>}
                    @if (User.IsInRole("Manager"))
                    {
        <li class="nav-item"><a class="nav-link" asp-controller="Employees" asp-action="Index"><i class="fas fa-id-card-alt"></i><span>Employees</span></a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Customers" asp-action="Index"><i class="fas fa-user-tie"></i><span>Customers</span></a></li>
                                        <li class="nav-item"><a class="nav-link" asp-controller="Payments" asp-action="Index"><i class="fas fa-coins"></i><span>Payments</span></a></li>
}
                </ul>
            </div>
        </nav>
        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content">
                <nav class="navbar navbar-light navbar-expand bg-white shadow mb-4 topbar static-top">
                    <div class="container-fluid">
                        <button class="btn btn-link d-md-none rounded-circle mr-3" id="sidebarToggleTop" type="button"><i class="fas fa-bars"></i></button>
                        <ul class="navbar-nav flex-nowrap ml-auto">
                            <li class="nav-item dropdown no-arrow">
                                <div class="nav-item dropdown no-arrow">
                                    <a class="dropdown-toggle nav-link" aria-expanded="false" data-toggle="dropdown" href="#"><span class="d-none d-lg-inline mr-2 text-gray-600 small">@($"{User?.FindFirstValue(ClaimTypes.Name)} {User?.FindFirstValue(ClaimTypes.Surname)}")</span></a>
                                    <div class="dropdown-menu shadow dropdown-menu-right animated--grow-in">
                                        <form asp-action="Logout" asp-controller="Employees"><button class="dropdown-item" type="submit"><i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>&nbsp;Logout</button></form>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
                @RenderBody()
            </div>
            <footer class="bg-white sticky-footer">
                <div class="container my-auto">
                    <div class="text-center my-auto copyright"><span>Copyright © MELANCRUT 2021</span></div>
                </div>
            </footer>
        </div><a class="border rounded d-inline scroll-to-top" href="#page-top"><i class="fas fa-angle-up"></i></a>
    </div>
    <div id="modalSpace"></div>
    <div id="gayModal" class="modal fade" role="dialog" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="text-center mb-2">Ви попали на гей кнопку! <i class="fas fa-smile"></i></div>
                    <div class="tenor-gif-embed" data-postid="13156857" data-share-method="host" data-width="100%" data-aspect-ratio="1.3333333333333333"><a href="https://tenor.com/view/billy-gachi-wink-gif-13156857">Billy Gachi GIF</a> from <a href="https://tenor.com/search/billy-gifs">Billy GIFs</a></div>
                    <script type="text/javascript" async src="https://tenor.com/embed.js"></script>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.min.js"></script>
    <script src="~/assets/js/bs-init.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.js"></script>
    <script src="~/assets/js/Multi-step-form.js"></script>
    <script src="~/assets/js/sb-admin-2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/select/1.3.3/js/dataTables.select.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.7.0/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.7.0/js/buttons.bootstrap4.min.js"></script>

<script src="https://cdn.datatables.net/searchpanes/1.2.1/js/dataTables.searchPanes.min.js"></script>
<script src="
https://cdn.datatables.net/searchpanes/1.2.1/js/searchPanes.bootstrap4.min.js"></script>

    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
