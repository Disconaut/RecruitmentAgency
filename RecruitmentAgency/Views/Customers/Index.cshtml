                    searchPanes: { show: false }
                },
                {
                    targets: [4],
                    searchable: false,
                    searchPanes: { show: false }
                }
            ],
            language: {
                searchPanes: {
                    collapse: { 0: '<i class="fas fa-filter"></i>', _: '<i class="fas fa-filter"></i> (%d)' }
